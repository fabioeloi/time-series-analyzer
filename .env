# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_DOCKER_CLI_BUILD=1
DOCKER_BUILDKIT=1
DOCKER_DEFAULT_PLATFORM=linux/amd64
COMPOSE_PATH_SEPARATOR=:
COMPOSE_FILE=docker-compose.yml
COMPOSE_CONVERT_WINDOWS_PATHS=1

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
APP_NAME=time-series-analyzer
APP_VERSION=1.0.0

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_DEBUG=true
API_PREFIX=/api
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings
API_KEY=dev-api-key-12345

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NODE_ENV=development
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_ENABLE_DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./backend/data/time_series.db

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=csv,xlsx,json
DATA_DIRECTORY=./backend/data
UPLOAD_DIRECTORY=./backend/data/uploads
CACHE_DIRECTORY=./backend/data/cache

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
ENABLE_HOT_RELOAD=true
TEST_DATABASE_URL=sqlite:///./backend/data/test_time_series.db